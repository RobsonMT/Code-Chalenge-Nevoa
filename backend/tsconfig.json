{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false
  }
}